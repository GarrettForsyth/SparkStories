<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.android.writeitsayithearit.binding.Converter" />

        <variable
            name="hasResults"
            type="boolean" />

        <variable
            name="viewmodel"
            type="com.example.android.writeitsayithearit.ui.comments.CommentsViewModel" />

        <variable
            name="listAdapter"
            type="com.example.android.writeitsayithearit.ui.comments.CommentAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commentsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/table_top_port"
        tools:context=".ui.stories.StoriesFragment">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sort_order_spinner"
            app:entries="@{@stringArray/sort_order}"
            app:onItemSelected="@{(selection) -> viewmodel.sortOrder(Converter.toSortOrder(selection))}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/comments_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </androidx.appcompat.widget.AppCompatSpinner>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comments_list"
            android:adapter="@{listAdapter}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/sort_order_spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listItem="@layout/story_list_item" />

        <TextView
            style="@style/Theme.WriteItSayItHearIt.NoResultsFoundStyle"
            android:id="@+id/no_results"
            android:text="@string/no_results"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            visibleGone="@{!hasResults}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
