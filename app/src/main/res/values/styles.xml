<resources>

    <!-- Base application theme. -->
    <style name="Theme.WriteItSayItHearIt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="Theme.WriteItSayItHearIt.CueCardText" >
        <item name="android:fontFamily">@font/cormorant_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Theme.WriteItSayItHearIt.MaterialButton">
        <item name="android:layout_margin">@dimen/margin_regular</item>
        <item name="android:fontFamily">@font/cormorant_medium</item>
        <item name="android:paddingStart">@dimen/margin_regular</item>
        <item name="android:paddingLeft">@dimen/margin_regular</item>
        <item name="android:paddingTop">@dimen/margin_regular</item>
        <item name="android:paddingEnd">@dimen/margin_regular</item>
        <item name="android:paddingRight">@dimen/margin_regular</item>
        <item name="android:paddingBottom">@dimen/margin_regular</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.WriteItSayItHearIt.FilterTextInputLayout">
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="android:textColorHint">@color/secondaryDarkColor</item>
    </style>

    <style name="Theme.WriteItSayItHearIt.FilterEditText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/secondaryDarkColor</item>
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="android:inputType">textShortMessage</item>
    </style>

    <style name="Theme.WriteItSayItHearIt.NoResultsFoundStyle">
        <item name="android:fontFamily">@font/cormorant_medium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.WriteItSayItHearIt.TopMenuItem" >
        <item name="android:layout_marginTop">@dimen/margin_regular</item>
        <item name="android:layout_marginBottom">@dimen/margin_regular</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>


        <item name="android:paddingBottom">@dimen/margin_regular</item>
    </style>

    <style name="Theme.WriteItSayItHearIt.TopMenuCueCardText" parent="Theme.WriteItSayItHearIt.CueCardText">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Theme.WriteItSayItHearIt.AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

</resources>
